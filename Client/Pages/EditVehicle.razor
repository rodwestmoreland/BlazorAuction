@page "/editVehicle/{id}"
@page "/editVehicle"
@inherits EditVehicleBase

<h3>Edit Vehicle</h3>


<EditForm Model="@Vehicle" OnValidSubmit="HandleValidSubmit">
    <hr />
    <ValidationSummary></ValidationSummary>
    <div class="form-group row">
        <label for="Start" class="col-sm-2 col-form-label">      Start Date    </label>
        <div class="col-sm-10">
            <InputDate id="start" class="form-control" placeholder="mm/dd/yy"
                       @bind-Value="Vehicle.BidStartDate" />
        </div>
    </div>
    <div class="form-group row">
        <label for="End" class="col-sm-2 col-form-label">      End Date    </label>
        <div class="col-sm-10">
            <InputDate id="end" class="form-control" placeholder="mm/dd/yy"
                       @bind-Value="Vehicle.BidEndDate" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Year" class="col-sm-2 col-form-label">      Year    </label>
        <div class="col-sm-10">
            <InputNumber id="year" class="form-control" placeholder="YYYY"
                         @bind-Value="Vehicle.Year" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Make" class="col-sm-2 col-form-label">      Make    </label>
        <div class="col-sm-10">
            <InputText id="make" class="form-control" placeholder="Make"
                       @bind-Value="Vehicle.Make" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Condition" class="col-sm-2 col-form-label">      Condition    </label>
        <div class="col-sm-10">
            <InputText id="condition" class="form-control" placeholder="excellent,good,fair,etc"
                       @bind-Value="Vehicle.Condition" />
        </div>
    </div>


    <div class="form-group row">
        <label for="Model" class="col-sm-2 col-form-label">      Model    </label>
        <div class="col-sm-10">
            <InputText id="model" class="form-control" placeholder="Model"
                       @bind-Value="Vehicle.Model" />
        </div>
    </div>
    <div class="form-group row">
        <label for="Mileage" class="col-sm-2 col-form-label">     Mileage  </label>
        <div class="col-sm-10">
            <InputNumber id="Mileage" class="form-control" placeholder="00000"
                         @bind-Value="Vehicle.Mileage" />

        </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>

</EditForm>

